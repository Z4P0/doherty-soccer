      //- comments list
      section#comments
        div.flex
          //- comment form
          +partial("comments/html/comment-form.jade","modules/comments/data/comment-form.json")

          //- list of comments
          div#comments-list
            h3.t7 Comments
            ul.comments-list
              li
                +partial("comments/html/comment-post.jade","modules/comments/data/comment-post.json")
              li
                +partial("comments/html/comment-post.jade","modules/comments/data/comment-post-2.json")
              li
                +partial("comments/html/comment-post.jade","modules/comments/data/comment-post-3.json")

